@page "/notfound"

@inject IJSRuntime Js
<PageTitle>Not found</PageTitle>

<main class="flex flex-col items-center justify-center ">
    <section class="flex flex-col items-center justify-center text-white bg-blue-700 rounded shadow p-10 m-5">
        <span class="text-2xl">صفحه مورد نظر پیدا نشد</span>
        <button class="text-xl bg-blue-800 px-6 py-3 rounded shadow mt-10" @onclick="OnBackAsync">
            بازگشت
        </button>
    </section>
</main>

@code {

    private async Task OnBackAsync()
    {
        await Js.InvokeVoidAsync("history.back").ConfigureAwait(false);
    }

}